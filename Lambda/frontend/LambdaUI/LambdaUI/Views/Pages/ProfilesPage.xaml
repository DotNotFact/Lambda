<Page
    x:Class="LambdaUI.Views.Pages.ProfilesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Profiles"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Определяем стиль для tooltip  -->
        <Style x:Key="CustomTooltipStyle" TargetType="lvc:DefaultTooltip">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Page.Resources>

    <StackPanel Margin="5" Orientation="Vertical">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Левая панель навигации  -->
            <Border
                Grid.Column="0"
                Background="#2D2D2D"
                CornerRadius="4">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Button Padding="0" Cursor="Hand">
                        <ui:SymbolIcon
                            Margin="8"
                            Foreground="White"
                            Symbol="Home24" />
                    </Button>
                    <ui:SymbolIcon
                        Margin="8"
                        Foreground="White"
                        Symbol="People24" />
                    <ui:SymbolIcon
                        Margin="8"
                        Foreground="White"
                        Symbol="Person12" />
                    <ui:SymbolIcon
                        Margin="8"
                        Foreground="White"
                        Symbol="Calendar24" />
                    <ui:SymbolIcon
                        Margin="8"
                        Foreground="White"
                        Symbol="Check24" />
                    <ui:SymbolIcon
                        Margin="8"
                        Foreground="White"
                        Symbol="Star24" />
                </StackPanel>
            </Border>

            <!--  Основное содержимое  -->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!--  Приветственное сообщение и краткая сводка  -->
                <StackPanel
                    Grid.Column="0"
                    Margin="5,0"
                    VerticalAlignment="Top"
                    Orientation="Vertical">

                    <TextBlock
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Foreground="Gray"
                        Text="Профили пользователей" />

                    <!--  Ключевые показатели  -->
                    <UniformGrid Columns="1">

                        <!--  Количество студентов  -->
                        <ui:CardControl>
                            <ui:CardControl.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="People24" />
                                    <TextBlock
                                        Margin="6"
                                        FontSize="16"
                                        Text="Студенты" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Text="{Binding Students.Count}" />
                        </ui:CardControl>

                        <!--  Количество групп  -->
                        <ui:CardControl>
                            <ui:CardControl.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="Person20" />
                                    <TextBlock
                                        Margin="6"
                                        FontSize="16"
                                        Text="Группы" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Text="{Binding TotalGroups}" />
                        </ui:CardControl>

                    </UniformGrid>
                </StackPanel>

                <!--  Таблица профилей  -->
                <DataGrid
                    Grid.Column="1"
                    Margin="5"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    HeadersVisibility="Column"
                    ItemsSource="{Binding Students}"
                    SelectionMode="Single">
                    <DataGrid.Columns>
                        <!--<DataGridTextColumn
                            Width="200"
                            Binding="{Binding Uid}"
                            Header="ID" />-->
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding FirstName}"
                            Header="Имя" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding LastName}"
                            Header="Фамилия" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding BirthDate, StringFormat=d}"
                            Header="Дата рождения" />
                        <DataGridTextColumn
                            Width="250"
                            Binding="{Binding ContactInfo}"
                            Header="Контактная информация" />
                        <DataGridTextColumn
                            Width="250"
                            Binding="{Binding Address}"
                            Header="Адрес" />
                        <DataGridTemplateColumn Width="150" Header="Действия">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <!--  Command="{Binding DataContext. EditStudentCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"  -->
                                        <ui:Button
                                            CommandParameter="{Binding Uid}"
                                            Cursor="Hand"
                                            Icon="Pen32">
                                            <ui:SymbolIcon Symbol="Pen32" />
                                        </ui:Button>
                                        <!--  Command="{Binding DeleteStudentCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"  -->
                                        <ui:Button
                                            Margin="5,0,0,0"
                                            CommandParameter="{Binding Uid}"
                                            Cursor="Hand">
                                            <ui:SymbolIcon Symbol="Delete32" />
                                        </ui:Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <!--  Последние действия  -->
        <Border
            Grid.Column="0"
            Margin="0,5,0,0"
            HorizontalAlignment="Left"
            Background="#2D2D2D"
            CornerRadius="4 4 0 0">

            <Grid Margin="10">
                <TextBlock
                    Margin="0,0,10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="Последние действия" />
            </Grid>
        </Border>

        <!--  Таблица последних действий  -->
        <Border
            Grid.Column="0"
            Background="#2D2D2D"
            CornerRadius="0 4 4 4">

            <Grid Margin="10">
                <DataGrid
                    Grid.Column="1"
                    Height="130"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    HeadersVisibility="Column"
                    ItemsSource="{Binding RecentActivities}"
                    SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="150"
                            Binding="{Binding Action}"
                            Header="Действие" />
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="150"
                            Binding="{Binding Date}"
                            Header="Дата" />
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="150"
                            Binding="{Binding User}"
                            Header="Пользователь" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </StackPanel>
</Page>