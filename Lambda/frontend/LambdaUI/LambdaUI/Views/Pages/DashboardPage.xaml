<Page
    x:Class="LambdaUI.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Dashboard"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Определяем стиль для tooltip  -->
        <Style x:Key="CustomTooltipStyle" TargetType="lvc:DefaultTooltip">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Page.Resources>

    <StackPanel Margin="5" Orientation="Vertical">

        <Grid>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Background="#2D2D2D"
                CornerRadius="4">

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Button Padding="0" Cursor="Hand">
                        <ui:SymbolIcon
                            Margin="8"
                            Foreground="White"
                            Symbol="Book24" />
                    </Button>
                    <ui:SymbolIcon
                        Margin="8"
                        Foreground="White"
                        Symbol="PersonStar32" />
                    <ui:SymbolIcon
                        Margin="8"
                        Foreground="White"
                        Symbol="Pen32" />
                    <ui:SymbolIcon
                        Margin="8"
                        Foreground="White"
                        Symbol="Person32" />
                    <ui:SymbolIcon
                        Margin="8"
                        Foreground="White"
                        Symbol="People32" />
                    <ui:SymbolIcon
                        Margin="8"
                        Foreground="White"
                        Symbol="PlaySettings20" />
                </StackPanel>

            </Border>

            <!--  Основное содержимое  -->
            <Grid Grid.Column="1">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.5*" />

                </Grid.ColumnDefinitions>

                <!--  Приветственное сообщение и краткая сводка  -->
                <StackPanel
                    Grid.Column="0"
                    Margin="5,0"
                    VerticalAlignment="Top"
                    Orientation="Vertical">

                    <TextBlock
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Foreground="Gray"
                        Text="Панель мониторинга" />

                    <!--  Ключевые показатели  -->
                    <UniformGrid Columns="1">

                        <!--  Количество студентов  -->
                        <ui:CardControl>
                            <ui:CardControl.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="PeopleCommunity24" />
                                    <TextBlock
                                        Margin="6"
                                        FontSize="16"
                                        Text="Студенты" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Text="{Binding ViewModel.TotalStudents}" />

                        </ui:CardControl>

                        <!--  Количество групп  -->
                        <ui:CardControl>
                            <ui:CardControl.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="Group24" />
                                    <TextBlock
                                        Margin="6"
                                        FontSize="16"
                                        Text="Группы" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Text="{Binding ViewModel.TotalGroups}" />

                        </ui:CardControl>

                        <!--  Предстоящие события  -->
                        <ui:CardControl>
                            <ui:CardControl.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="Calendar24" />
                                    <TextBlock
                                        Margin="6"
                                        FontSize="16"
                                        Text="События" />
                                </StackPanel>
                            </ui:CardControl.Header>
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Text="{Binding ViewModel.UpcomingEvents}" />

                        </ui:CardControl>
                    </UniformGrid>

                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical">

                    <!--  Визуализация данных  -->
                    <UniformGrid Columns="1">

                        <ui:CardControl VerticalAlignment="Top">

                            <ui:CardControl.Header>
                                <Grid>

                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />

                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Посещаемость" />

                                    <lvc:PieChart
                                        Grid.Column="1"
                                        MinHeight="80"
                                        HorizontalAlignment="Right"
                                        Series="{Binding ViewModel.AttendanceChart}">
                                        <lvc:PieChart.DataTooltip>
                                            <lvc:DefaultTooltip Style="{StaticResource CustomTooltipStyle}" />
                                        </lvc:PieChart.DataTooltip>
                                    </lvc:PieChart>

                                </Grid>
                            </ui:CardControl.Header>

                        </ui:CardControl>

                        <ui:CardControl VerticalAlignment="Top">

                            <ui:CardControl.Header>
                                <Grid>

                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />

                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Успеваемость" />

                                    <lvc:PieChart
                                        Grid.Column="1"
                                        MinHeight="80"
                                        HorizontalAlignment="Right"
                                        Series="{Binding ViewModel.GradesChart}">
                                        <lvc:PieChart.DataTooltip>
                                            <lvc:DefaultTooltip Style="{StaticResource CustomTooltipStyle}" />
                                        </lvc:PieChart.DataTooltip>
                                    </lvc:PieChart>

                                </Grid>
                            </ui:CardControl.Header>

                        </ui:CardControl>

                    </UniformGrid>

                </StackPanel>

            </Grid>

        </Grid>

        <Border
            Grid.Column="0"
            Margin="0,5,0,0"
            HorizontalAlignment="Left"
            Background="#2D2D2D"
            CornerRadius="4 4 0 0">

            <Grid Margin="10">

                <TextBlock
                    Margin="0,0,10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="Последние действия" />

            </Grid>

        </Border>

        <!--  Последние действия  -->
        <Border
            Grid.Column="0"
            Background="#2D2D2D"
            CornerRadius="0 4 4 4">

            <Grid Margin="10">

                <DataGrid
                    Grid.Column="1"
                    Height="130"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    HeadersVisibility="Column"
                    ItemsSource="{Binding ViewModel.RecentActivities}"
                    SelectionMode="Single">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="150"
                            Binding="{Binding Action}"
                            Header="Действие" />
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="150"
                            Binding="{Binding Date}"
                            Header="Дата" />
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="150"
                            Binding="{Binding User}"
                            Header="Пользователь" />
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>

        </Border>

    </StackPanel>

</Page>