<Page x:Class="LambdaUI.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:helpers="clr-namespace:LambdaUI.Helpers"
      mc:Ignorable="d"
      Title="Login">

    <Grid HorizontalAlignment="Left" Margin="10" Width="300 ">

        <StackPanel>

            <TextBlock
            Margin="10"
            FontSize="24"
            FontWeight="Bold"
            Foreground="White"
            Text="Войти" />
            
            <TextBlock
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                FontSize="16"
                Foreground="Gray"
                Text="ФИО" />

            <TextBox 
                Margin="0,0,0,10"
                Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
    Margin="0,0,0,10"
    HorizontalAlignment="Left"
    FontSize="16"
    Foreground="Gray"
    Text="Пароль" />

            <PasswordBox
                Margin="0,0,0,10" 
                helpers:PasswordHelper.Attach="True"
                helpers:PasswordHelper.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />
  
            <Button 
                Cursor="Hand"
                Content="Войти"
                Padding="10"
                HorizontalAlignment="Stretch" 
                Command="{Binding LoginCommand}"  />

            <TextBlock Margin="0 10 0 0" FontSize="16" FontWeight="Bold" Text="{Binding ErrorMessage, Mode=OneWay}" Foreground="Red" />

        </StackPanel>

    </Grid>

</Page>